server {
        listen 80; # this port will listen, if you don't have ssl, remove ssl word
        server_name f23-p2-airules.paris-digital-lab.fr;
        return 301 https://$host$request_uri;
    }
    server{
        listen 443 ssl;
        server_name f23-p2-airules.paris-digital-lab.fr;

        ssl_certificate /etc/letsencrypt/live/f23-p2-airules.paris-digital-lab.fr/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/f23-p2-airules.paris-digital-lab.fr/privkey.pem;

        client_max_body_size 200M; # It allows files below 200Mb, change it based on your use

        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers 'TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384';

        location / {

            proxy_pass http://172.17.0.2:8501;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header Host $http_host;
            proxy_redirect off;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";  

            # Enable basic authentication
            auth_basic "Restricted Access";
            auth_basic_user_file /etc/nginx/.htpasswd;
        }
  }
